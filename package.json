{
    "name": "minimal-react-webpack-babel-setup",
    "version": "1.0.0",
    "description": "React simple bootstrap",
    "scripts": {
        "build": "set NODE_ENV=production && webpack --mode production --config ./config/webpack.config.prod.babel.js",
        "start": "webpack-dev-server --mode development --config ./config/webpack.config.babel.js",
        "upgrade": "npx flow stop && ncu --upgradeAll && npm install && npx flow",
        "precommit": "lint-staged",
        "test": "echo \"No test specified\" && exit 0"
    },
    "lint-staged": {
        "*.{js,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "keywords": [
        "react",
        "bootstrap",
        "hot reloading",
        "babel",
        "eslint",
        "prettier",
        "stylelint"
    ],
    "author": "Vadim Budarin",
    "license": "ISC",
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-eslint": "^8.2.3",
        "babel-loader": "^7.1.4",
        "babel-minify-webpack-plugin": "^0.3.1",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-plugin-lodash": "^3.3.2",
        "babel-plugin-syntax-dynamic-import": "^6.18.0",
        "babel-plugin-syntax-trailing-function-commas": "^6.22.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-react-constant-elements": "^6.23.0",
        "babel-plugin-transform-react-inline-elements": "^6.22.0",
        "babel-plugin-transform-react-jsx-self": "^6.22.0",
        "babel-plugin-transform-react-jsx-source": "^6.22.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-flow": "^6.23.0",
        "babel-preset-react": "^6.24.1",
        "copy-webpack-plugin": "^4.5.1",
        "eslint": "^4.19.1",
        "eslint-config-prettier": "^2.9.0",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-flowtype": "^2.47.1",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-prettier": "^2.6.0",
        "eslint-plugin-promise": "^3.8.0",
        "eslint-plugin-react": "^7.8.2",
        "eslint-plugin-standard": "^3.1.0",
        "flow-bin": "^0.73.0",
        "optimize-js-plugin": "0.0.4",
        "prettier": "^1.13.0",
        "react-hot-loader": "^4.2.0",
        "webpack": "^4.9.1",
        "webpack-cli": "^2.1.4",
        "webpack-dev-server": "^3.1.4"
    },
    "dependencies": {
        "react": "^16.4.0",
        "react-dom": "^16.4.0"
    }
}
